<h2 align="center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, placeholder: "Enter your first name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, autofocus: true, placeholder: "Enter your last name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter your password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Comfirm your password", class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="actions">
      <%= f.submit "Sign Up", class: "btn btn-outline-primary" %>
      <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        or choise other actions
      </a>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
